<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p><%= link_to 'Edit', edit_task_path %> </p>
<p><%= link_to "Delete #{@task.title}",
              task_path(@task),
              method: :delete,
              data: { confirm: "Are you sure?" } %></p>

<% if @task.completed == true %>
  <i class="fas fa-check-square"></i>
<% else %>
  <i class="fas fa-square"></i>
<% end %>

<%= link_to "Back to list", tasks_path %>

