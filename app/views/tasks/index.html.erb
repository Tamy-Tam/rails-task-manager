<h1>My tasks</h1>

<%= link_to "+ New task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed  %>
        <i class="fas fa-check-square"></i>
      <% else %>
        <i class="fas fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
